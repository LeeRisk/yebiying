if ENV['USE_OFFICIAL_GEM_SOURCE']
  source 'https://rubygems.org'
else
  source 'https://ruby.taobao.org'
end


gem 'rails'

#===========
# Controller
#===========
gem 'devise'
gem 'rails_admin'

#=====
# View
#=====
gem 'sass-rails'
gem 'bootstrap-sass'
gem "font-awesome-rails"
gem 'coffee-rails'
gem 'uglifier'
gem 'therubyracer', platforms: :ruby
gem 'jquery-rails'
gem 'jquery-turbolinks'
gem 'turbolinks'
gem 'jbuilder'
gem 'simple_form'
gem 'kaminari'

#=====
# Test
#=====
gem 'rspec-rails'
gem 'capybara'
gem 'factory_girl_rails'
gem 'cucumber-rails'
gem 'database_cleaner'



#======
# Debug
#======
group :development do
  gem "better_errors"
  gem "binding_of_caller"
end
# gem 'debugger', group: [:development, :test]



#=========
# Database
#=========
gem 'pg'
gem "carrierwave"
gem "carrierwave-upyun"
gem "rest-client"


#=======
# Server
#=======
gem 'unicorn'
group :development do
  gem 'guard'
  gem 'guard-unicorn'
end

gem 'spring',group: :development


#=======
# Deploy
#=======
group :development do
  gem 'capistrano'
  gem 'rvm-capistrano'
  gem 'capistrano-unicorn'
end
gem 'whenever'

#=======
# Doc
#=======
gem 'sdoc',group: :doc




