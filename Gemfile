source 'https://rubygems.org'

gem 'rails'

#===========
# Controller
#===========
gem 'devise'
gem 'rails_admin'

#=====
# View
#=====
gem 'sass-rails'
gem 'bootstrap-sass'
gem "font-awesome-rails"
gem 'coffee-rails'
gem 'uglifier'
gem 'therubyracer', platforms: :ruby
gem 'jquery-rails'
gem 'jquery-turbolinks'
gem 'turbolinks'
gem 'jbuilder'
gem 'simple_form'
gem 'kaminari'

#=====
# Test
#=====
group :development, :test do
  gem "rspec-rails"
  gem "factory_girl_rails"
end

group :test do
  gem 'faker'
  gem 'capybara'
  gem 'cucumber-rails', :require => false
  gem 'database_cleaner'
  gem 'launchy'
  gem 'selenium-webdriver'
end


#======
# Debug
#======
group :development do
  gem "better_errors"
  gem "binding_of_caller"
end
# gem 'debugger', group: [:development, :test]


#=========
# Database
#=========
gem 'pg'
gem "carrierwave"
gem "carrierwave-upyun"
gem "rest-client"


#=======
# Server
#=======
gem 'unicorn'
group :development do
  gem 'guard'
  gem 'guard-unicorn'
end

gem 'spring',group: :development


#=======
# Deploy
#=======
group :development do
  gem 'capistrano'
  gem 'rvm-capistrano'
  gem 'capistrano-unicorn'
end
gem 'whenever'

#=======
# Doc
#=======
gem 'sdoc',group: :doc




